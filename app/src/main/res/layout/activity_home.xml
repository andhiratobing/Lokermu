<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#014A73"
    app:popupTheme="@style/AppTheme.NoActionBar"
    tools:context=".Activity.HomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/AppBar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#014A73"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#014A73">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_menu_home"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_foto_user"
                    app:civ_border_color="#faf0af"
                    app:civ_border_width="1dp" />

                <ImageView
                    android:id="@+id/icon_notifikasi"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_notification"
                    android:contentDescription="@string/todo" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/image_lokermu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AppBar_home"
        android:gravity="center"
        android:background="#014A73"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/todo"
            android:layout_gravity="center"
            android:src="@drawable/logo_lokermu"/>
    </RelativeLayout>


      <LinearLayout
          android:id="@+id/layout_menu"
          android:layout_below="@+id/image_lokermu"
          android:gravity="center|top"
          android:background="#D0D7F9"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <androidx.cardview.widget.CardView
              android:id="@+id/card_view_lamaranku"
              android:layout_width="210dp"
              android:layout_height="180dp"
              android:layout_rowWeight="1"
              android:layout_columnWeight="1"
              android:layout_marginStart="20dp"
              android:layout_marginEnd="20dp"
              android:layout_marginTop="40dp"
              android:layout_marginBottom="10dp"
              android:backgroundTint="#FFFFFF"
              app:cardCornerRadius="17dp"
              app:cardElevation="1dp">

              <RelativeLayout
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

              <ImageView
                  android:id="@+id/img_lamaranku"
                  android:layout_marginTop="25dp"
                  android:layout_gravity="center"
                  android:src="@drawable/ic_lamaranku"
                  android:layout_width="match_parent"
                  android:layout_height="70dp"/>

              <View
                  android:id="@+id/view_home"
                  android:layout_marginTop="15dp"
                  android:layout_marginEnd="20dp"
                  android:layout_marginStart="20dp"
                  android:layout_below="@+id/img_lamaranku"
                  android:background="@color/colorText"
                  android:layout_width="match_parent"
                  android:layout_height="1dp"/>

                 <TextView
                     android:layout_marginTop="12dp"
                     android:layout_below="@+id/view_home"
                     android:gravity="center"
                     android:text="Lamaranku"
                     android:textSize="17sp"
                     android:fontFamily="@font/ubuntu"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

              </RelativeLayout>
          </androidx.cardview.widget.CardView>



          <androidx.cardview.widget.CardView
              android:id="@+id/card_view_daftar_lowongan"
              android:layout_width="210dp"
              android:layout_height="180dp"
              android:layout_rowWeight="1"
              android:layout_columnWeight="1"
              android:layout_marginStart="20dp"
              android:layout_marginTop="40dp"
              android:layout_marginEnd="20dp"
              android:layout_marginBottom="10dp"
              android:backgroundTint="#FFFFFF"
              app:cardCornerRadius="17dp"
              app:cardElevation="1dp">


              <RelativeLayout
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <ImageView
                      android:id="@+id/img_daftar_lowongan"
                      android:layout_marginTop="25dp"
                      android:layout_gravity="center"
                      android:src="@drawable/ic_daftar_lowongan"
                      android:layout_width="match_parent"
                      android:layout_height="70dp"/>

                  <View
                      android:id="@+id/view_home2"
                      android:layout_marginTop="15dp"
                      android:layout_marginEnd="20dp"
                      android:layout_marginStart="20dp"
                      android:layout_below="@+id/img_daftar_lowongan"
                      android:background="@color/colorText"
                      android:layout_width="match_parent"
                      android:layout_height="1dp"/>

                  <TextView
                      android:layout_marginTop="12dp"
                      android:layout_below="@+id/view_home2"
                      android:gravity="center"
                      android:text="Daftar Lowongan"
                      android:textSize="17sp"
                      android:fontFamily="@font/ubuntu"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>

              </RelativeLayout>

          </androidx.cardview.widget.CardView>
      </LinearLayout>
</RelativeLayout>