<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#D0D7F9"
    app:popupTheme="@style/AppTheme.NoActionBar"
    tools:context=".OnBoarding.Activity.OnBoardingSwipeActivity">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lewati"
        app:textAllCaps="false"
        android:textColor="#7E7D7D"
        android:fontFamily="@font/roboto_medium"
        android:textSize="17sp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:layout_below="@id/text_skip"
        android:layout_above="@id/pageIndicatorView" />


    <com.rd.PageIndicatorView
        android:id="@+id/pageIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="178dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        app:piv_animationType="worm"
        app:piv_interactiveAnimation="true"
        app:piv_padding="6dp"
        app:piv_radius="6dp"
        app:piv_selectedColor="#7E7D7D"
        app:piv_unselectedColor="#C4C4C4"
        app:piv_viewPager="@id/viewPager" />

    <ImageView
        android:id="@+id/btn_next_step"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@id/pageIndicatorView"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="49dp"
        android:fontFamily="@font/roboto_medium"
        android:src="@drawable/ic_next"
        android:text="Lanjut"
        android:textAllCaps="false"
        android:textSize="16sp"/>


</RelativeLayout>