<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/on_boarding_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#D0D7F9"
    app:popupTheme="@style/AppTheme.NoActionBar"
    tools:context=".OnBoarding.Activity.OnBoardingSwipeActivity">

    <ImageView
        android:id="@+id/image_onboarding"
        android:layout_width="380dp"
        android:layout_height="331dp"
        android:paddingTop="60dp"
        android:paddingBottom="5dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_onboarding_title"
        android:layout_width="158dp"
        android:layout_height="42dp"
        android:layout_below="@id/image_onboarding"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="center"
        android:textColor="#014A73"
        android:textSize="23sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_onboarding_description"
        android:layout_width="219dp"
        android:layout_height="32dp"
        android:layout_below="@id/text_onboarding_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:textColor="#0E527B"
        android:textSize="14sp" />

</RelativeLayout>