<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_sheet_background"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_scroll" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_lowongan"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="10dp"
                            app:civ_border_color="@color/putih"
                            app:civ_border_width="4dp" />

                        <TextView
                            android:id="@+id/tv_jabatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_instansi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_lokasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            android:textStyle="bold" />


                        <View
                            android:layout_marginTop="20dp"
                            android:background="@color/colorText"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"/>

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:text="Status"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tv_isi_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tv_deskripsi_pekerjaan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:text="Deskripsi Pekerjaan"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tv_isi_pekerjaan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:letterSpacing="0.01"
                            android:justificationMode="none"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            tools:ignore="RtlSymmetry"
                            tools:targetApi="o" />

                        <TextView
                            android:id="@+id/tv_deskripsi_persyaratan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:text="Persyaratan"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tv_isi_persyaratan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:letterSpacing="0.01"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tv_benfit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:text="Benefit"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tv_isi_benefit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tv_deadline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:text="Batas Pendaftaran"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tv_isi_deadline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tv_tes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:text="Tes yang harus di selesaikan"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tv_isi_tes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tv_contact_person"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:text="Kontak"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tv_isi_contact_person"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:autoLink="email"
                            android:linksClickable="true"
                            android:textColorLink="@color/biru"
                            android:textColor="@color/colorText"
                            android:textSize="17sp"
                            tools:ignore="RtlSymmetry" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_daftar_pekerjaan"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="40dp"
                                android:background="@drawable/backg_button"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:letterSpacing="0.2"
                                android:text="Daftar"
                                android:autoLink="email"
                                android:linksClickable="true"
                                android:textAllCaps="false"
                                android:textColor="@color/putih"
                                android:textSize="19sp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>