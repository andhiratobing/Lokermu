<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/bottom_sheet_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_scroll" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_lowongan"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    app:civ_border_color="@color/putih"
                    app:civ_border_width="4dp" />

                <TextView
                    android:id="@+id/tv_jabatan"
                    android:textSize="17sp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_instansi"
                    android:textSize="17sp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_lokasi"
                    android:textSize="17sp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/tv_status"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:text="Status"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_isi_status"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_deskripsi_pekerjaan"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:text="Deskripsi Pekerjaan"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_isi_pekerjaan"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_deskripsi_persyaratan"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:text="Persyaratan"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_isi_persyaratan"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_benfit"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:text="Benefit"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_isi_benefit"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_tes"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:text="Tes yang harus di selesaikan"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_isi_tes"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />


                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_daftar_pekerjaan"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/backg_button"
                        android:fontFamily="@font/roboto_medium"
                        android:letterSpacing="0.2"
                        android:text="Daftar"
                        android:textAllCaps="false"
                        android:textColor="@color/putih"
                        android:textSize="19sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>