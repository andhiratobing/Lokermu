<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D0D7F9"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_list_lowongan"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardElevation="1dp"
        android:padding="5dp"
        app:cardBackgroundColor="#F7F9FA"
        app:cardCornerRadius="14dp">

        <RelativeLayout
            android:id="@+id/rv_row_penjualan_tabung"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_card_list_lowongan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:contentDescription="@string/todo" />


            <TextView
                android:id="@+id/tv_posisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:layout_toEndOf="@id/img_card_list_lowongan"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/tv_instansi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textStyle="normal"
                android:textSize="12sp"
                android:layout_marginTop="17dp"
                android:layout_alignTop="@id/tv_posisi"
                android:layout_toEndOf="@id/img_card_list_lowongan"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/tv_lokasi_instansi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textStyle="normal"
                android:textSize="12sp"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:layout_alignTop="@id/tv_instansi"
                android:layout_toEndOf="@id/img_card_list_lowongan"
                android:layout_marginStart="10dp"/>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>